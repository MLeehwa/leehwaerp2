{
  "name": "erp-backend",
  "version": "1.0.0",
  "description": "ERP System Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.mongodb.ts",
    "dev:memory": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.mongodb.js",
    "init:db": "ts-node src/scripts/init-db.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "seed:categories": "ts-node src/scripts/seedCategories.ts",
    "seed:menu-codes": "ts-node src/scripts/seedMenuCodes.ts",
    "seed:invoice": "ts-node src/scripts/seedInvoiceData.ts",
